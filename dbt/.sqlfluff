[sqlfluff]
dialect = snowflake
templater = dbt
exclude_rules = L009,L031,LT05
nocolor = False

[sqlfluff:templater:dbt]
project_dir = .
profiles_dir = ~/.dbt

[sqlfluff:rules]
max_line_length = 120  # tuỳ chọn theo coding guideline

[sqlfluff:layout]
indented_joins = true

[sqlfluff:lint]
exclude_paths = dbt/dbt_packages/*